<%= form_for @comment, url: post_comments_path(@post) do |f| %>

<%= render 'shared/error', :object => @comment %>

<div class="form">
  <%= f.text_field :comment %>
</br>
  <%= f.fields_for :comment_images do |ci| %>
    <%= ci.file_field :image, accept: 'image/jpeg,image/gif,image/png' %></br>
  <% end %>
  <%= f.submit %>
</div>
<% end %>
